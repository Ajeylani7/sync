<%= form_with(model: post, local: true) do |form| %>

  <div>
    <%= form.label :title %>
    <%= form.text_field :title %>
  </div>
  <div>
    <%= form.label :content %>
    <%= form.text_area :content %>
  </div>
  <div>
    <%= form.submit %>
    <%= link_to 'Cancel', posts_path, class: 'cancel-button' %>
  </div>
<% end %>
